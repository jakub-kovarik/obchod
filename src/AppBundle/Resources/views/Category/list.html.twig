{% block title %}

    <h1>Categories - list</h1>

{% endblock %}

{% block body %}

<ul>
    {% for category in categories %}
        <li><a href={{ path('category_show', { 'slug': category.slug }) }}>{{ category.name }}</a></li>
    {% endfor %}
</ul>

<a href={{ path('category_add') }}>Add new category</a>

{% endblock %}
